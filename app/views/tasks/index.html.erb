<h1>My Tasks</h1>
<ul>
 <% @tasks.each do |task| %>
 <li>
  <input type="checkbox" <%= task.completed? ? "checked" : "" %> >
   <%= link_to task.name, task_path(task) %>
   <%= link_to "Remove", task_path(task),
   method: :delete,
   data: { confirm: "Are you sure to delete '#{task.name}' ?" } %>
 </li>
 <% end %>
</ul>
